{
  "name": "slug-sync-backend",
  "version": "2.0.0",
  "description": "slug sync - Backend",
  "author": "David Harrison <dcharris@ucsc.edu>",
  "license": "UNLICENSED",
  "repository": "none",
  "devDependencies": {
    "eslint": "*",
    "eslint-config-google": "*",
    "jest": "*",
    "nodemon": "*",
    "supertest": "*"
  },
  "dependencies": {
    "bcrypt": "*",
    "body-parser": "*",
    "cors": "*",
    "dotenv": "*",
    "express": "*",
    "express-openapi-validator": "*",
    "express-session": "*",
    "js-yaml": "*",
    "jsonwebtoken": "*",
    "pg": "*",
    "swagger-ui-express": "*"
  },
  "jest": {
    "testTimeout": 60000,
    "collectCoverageFrom": [
      "src/**/*.{js,jsx}",
      "!src/server.js"
    ],
    "testMatch": [
      "**/?(*.)+(spec|test).[jt]s?(x)"
    ]
  },
  "eslintConfig": {
    "extends": [
      "google"
    ],
    "parserOptions": {
      "ecmaVersion": 14
    },
    "rules": {
      "indent": [
        "warn",
        2
      ],
      "no-trailing-spaces": "off"
    }
  },
  "scripts": {
    "start": "nodemon src/server.js",
    "test": "jest --runInBand --coverage --verbose --forceExit",
    "lint": "eslint . --no-inline-config --max-warnings 0 --ext .js"
  }
}
